<section class="section">
  <p id="notice"><%= notice %></p>

  <div class="container">
    <h1 class="title">Books</h1>
    <h2 class="subtitle">
      A simple products index page
    </h2>
    <table class="table is-bordered is-hoverable is-fullwidth is-striped" >
      <thead>
      <tr>
        <th>Author</th>
        <th>Title</th>
        <th>Cover</th>
      </tr>
      </thead>
      <% @books.each do |book| %>
        <tr>
          <td> <%= book.author %></td>
          <td> <%= book.title %></td>
          <td> <%= book.cover %></td>
          <% if user_signed_in? %>
          <td>
            <div class="field is-grouped">
              <p class="control">
                <button class="button is-small is-warning"><%= link_to 'Show', book %></button>
              </p>
              <p class="control">
                <button class="button is-small is-link"><%= link_to 'Edit', edit_book_path(book) %></button>
              </p>
              <p class="control">
                <button class="button is-small is-danger"><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></button>
              </p>
            </div>
          </td>
          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="container mt-5">
    <button class="button is-info"><%= link_to 'New Book', new_book_path %></button>
  </div>
</section>